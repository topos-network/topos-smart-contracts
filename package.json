{
  "name": "@toposware/topos-smart-contracts",
  "version": "1.0.0",
  "description": "Topos Smart Contracts",
  "repository": {
    "type": "git",
    "url": "https://github.com/toposware/topos-smart-contracts.git"
  },
  "license": "MIT",
  "author": "Toposware",
  "main": "",
  "files": [
    "artifacts"
  ],
  "scripts": {
    "build": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "coverage": "npx hardhat coverage",
    "deploy": "ts-node scripts/deploy.ts",
    "deploy:topos-msg-protocol": "ts-node scripts/deploy-topos-msg-protocol.ts",
    "kill-ganache": "for pname in $(pgrep -f ganache); do kill $pname; done",
    "lint": "npm run lint:sol && npm run lint:prettier && npm run lint:ts",
    "lint:fix": "npm run lint:prettier:fix && npm run lint:ts:fix",
    "lint:ts": "prettier --loglevel warn --ignore-path .gitignore '**/*.{js,ts}' --check && eslint --ignore-path .gitignore --ext .ts .",
    "lint:ts:fix": "prettier --loglevel warn --ignore-path .gitignore '**/*.{js,ts}' --write && eslint --ignore-path .gitignore --ext .ts . --fix",
    "lint:prettier": "prettier -c 'contracts/**/*.sol'",
    "lint:prettier:fix": "prettier --write 'contracts/**/*.sol'",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "run-development": "(ganache --chain.chainId 1337 --chain.hardfork istanbul --wallet.totalAccounts 10 --wallet.mnemonic brownie --miner.blockGasLimit 12000000 --server.port 8545 --chain.vmErrorsOnRPCResponse true > /dev/null 2>&1 &)",
    "run-development-two": "(ganache --chain.chainId 1338 --chain.hardfork istanbul --wallet.totalAccounts 10 --wallet.mnemonic brownie --miner.blockGasLimit 12000000 --server.port 7545 --chain.vmErrorsOnRPCResponse true > /dev/null 2>&1 &)",
    "test": "npx hardhat test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "chai": "^4.3.7",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "ganache": "^7.7.6",
    "hardhat": "2.13.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.2",
    "ethers": "^5.7.2",
    "solidity-rlp": "2.0.7"
  }
}
